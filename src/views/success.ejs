    /* Set default font and background color */
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    /* Create a container to center content vertically */
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100vh;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Style the header */
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px;
        background-color: #fff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Style the back link */
    a.back-link {
        color: #007bff;
        text-decoration: none;
        border-bottom: 1px solid #007bff;
        transition: all 0.2s ease-in-out;
    }

    a.back-link:hover {
        background-color: #007bff;
        color: #fff;
        border-bottom: 1px solid #fff;
    }

    /* Style the main content */
    main {
        background-color: #fff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        padding: 32px;
    }

    h1 {
        font-size: 32px;
        color: #007bff;
        margin-bottom: 16px;
    }

    p {
        font-size: 16px;
        line-height: 1.5;
        margin-bottom: 16px;
    }

    /* Style the success message */
    .success-message {
        color: #28a745;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 16px;
    }

    /* Style the error message */
    .error-message {
        color: #dc3545;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 16px;
    }
