<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All qrcodes of RazorPay</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F0F0F0;
            margin: 0;
            padding: 0;
        }

        h3 {
            color: #333;
            text-align: center;
            margin: 1em 0;
        }

        button {
            background-color: #555;
            color: #FFF;
            padding: 0.5em 1em;
            border: none;
            border-radius: 0.5em;
            margin: 1em;
        }

        button:hover {
            background-color: #777;
            cursor: pointer;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        li {
            background-color: #FFF;
            border: 1px solid #DDD;
            box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            border-radius: 0.5em;
            margin: 1em;
            padding: 1em;
            max-width: 25em;
            text-align: center;
            transition: box-shadow 0.2s ease;
        }

        li:hover {
            box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.2);
        }

        img {
            max-width: 100%;
            height: auto;
            margin: 1em 0;
        }

        p {
            margin: 0.5em 0;
            font-size: small;
            color: #888;
        }
    </style>
</head>

<body>

    <h3>All qrcodes of RazorPay</h3>
    <ul>
        <% qrcodes.items.forEach(function(qrcode) { %>
            <li>
                <img src="<%= qrcode.image_url %>">
                <p>qrcode ID: <%= qrcode.id %>
                </p>
                <p>image_url: <%= qrcode.image_url %>
                </p>
                <p>description: <%= qrcode.description %>
                </p>
                <p>status: <%= qrcode.status %>
                </p>
                <p>usage:<%= qrcode.usage %>
                </p>
                <p>created_at:<%= qrcode.created_at %>
                </p>
            </li>
            <% }) %>
    </ul>
</body>

</html>